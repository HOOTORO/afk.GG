{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "default",
      "pageBundle": false,
      "previewPath": null,
      "fields": [
        {
          "title": "template",
          "name": "template",
          "type": "string",
          "single": true
        },
        {
          "title": "title",
          "name": "title",
          "type": "string",
          "single": true
        },
        {
          "title": "description",
          "name": "description",
          "type": "string",
          "default": "You should never underestimate the predictability of stupidity"
        },
        {
          "title": "date",
          "name": "date",
          "type": "fields",
          "fields": [
            {
              "title": "Created",
              "name": "created",
              "type": "datetime",
              "default": "{now}",
              "dateFormat": "yyyy-MM-dd",
              "isPublishDate": true
            },
            {
              "title": "Updated",
              "name": "updated",
              "type": "datetime",
              "default": "{now}",
              "dateFormat": "yyyy-MM-dd",
              "isModifiedDate": true
            }
          ]
        },
        {
          "title": "Article preview",
          "name": "preview",
          "type": "image",
          "isPreviewImage": true
        },
        {
          "title": "authors",
          "name": "authors",
          "type": "choice",
          "choices": [
            "SE2k",
            "sensei",
            "kisso",
            "HOOTSMAN",
            "asm",
            "Delian",
            "moon",
            "fatal"
          ],
          "default": "HOOTSMAN"
        },
        {
          "title": "categories",
          "name": "categories",
          "type": "categories"
        },
        {
          "title": "tags",
          "name": "tags",
          "type": "tags"
        },
        {
          "title": "draft",
          "name": "draft",
          "type": "draft",
          "default": true
        },
        {
          "title": "comments",
          "name": "comments",
          "type": "boolean"
        },
        {
          "title": "hide",
          "name": "hide",
          "type": "choice",
          "choices": ["feedback", "footer", "navigation", "toc"]
        }
      ]
    }
  ],
  "frontMatter.content.snippets": {
    "admonition": {
      "description": "well",
      "body": [
        "/// | Lorem ipsum",
        "Neque porro quisquam est qui dolorem ipsum quia dolor sit amet, consectetur, adipisci velit...",
        "///"
      ],
      "fields": []
    }
  },
  "frontMatter.preview.host": "http://siniwure.deadspace.inc/blog/",
  "frontMatter.framework.startCommand": "mkdocs serve --watch-theme"
}
