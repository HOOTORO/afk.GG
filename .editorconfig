# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

# Markdown
[*.md]
trim_trailing_whitespace = false
indent_size = 4

[*.py]
trim_trailing_whitespace = false
indent_size = 4